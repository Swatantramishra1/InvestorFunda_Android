<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="10dp" >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/inputText"
        android:layout_below="@+id/sip_years"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/amountEdit"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textSize="15sp"
            android:drawableLeft="@drawable/rupee_icon"
            android:layout_height="wrap_content"
            android:hint="Your Monthly Investment Is ( Rs 500 - 200000)"
            android:inputType="number"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/inputText"
        android:id="@+id/quesMode"
        android:layout_marginLeft="10dp"
        android:text="Investment Mode"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/invesMode"
        android:layout_below="@+id/quesMode"
        android:layout_marginTop="3dp"
        android:padding="7dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:text="Submit"
        android:textColor="#fff"
        android:id="@+id/submit_compare"
        android:layout_below="@+id/invesMode"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:background="@color/accent_material_dark"
        android:layout_height="35dp" />
    <Button
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:textColor="#fff"
        android:layout_below="@+id/invesMode"
        android:layout_marginTop="20dp"
        android:id="@+id/cancel_compare"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:background="@color/accent_material_dark"
        android:layout_height="35dp" />
</RelativeLayout>
