<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitXY" android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" 
            android:layout_width="80.0dip" 
            android:layout_height="80.0dip" 
            android:layout_marginTop="25.0dip" 
            android:layout_marginBottom="25.0dip" />
        <ProgressBar android:layout_gravity="center" 
            android:id="@+id/progressBar" 
            android:background="@android:color/transparent"
            android:visibility="gone" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" 
            android:layout_centerVertical="true" />
        <TextView android:textSize="24.0sp" 
            android:textColor="#ff4b0082"
            android:layout_gravity="center"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="Investorfunda" />
        <TextView android:textSize="24.0sp" 
            android:textColor="#ff08e8de" 
            android:layout_gravity="center" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip"
            android:text="Partner's Login" />
        <EditText android:textSize="13.0sp"
            android:textColor="#ff4b0082" 
            android:textColorHint="#ffd3d3d3" 
            android:gravity="center|left" 
            android:layout_gravity="center" 
            android:id="@+id/ed_email" 
            android:background="@drawable/background" 
            android:padding="10.0dip"
            android:layout_width="fill_parent" 
            android:layout_height="40.0dip" 
            android:layout_marginLeft="25.0dip" 
            android:layout_marginTop="40.0dip" 
            android:layout_marginRight="25.0dip" 
            android:hint="Email"
            android:lines="2" />
        <EditText android:textSize="13.0sp" 
            android:textColor="#ff4b0082"
            android:textColorHint="#ffd3d3d3"
            android:gravity="center|left"
            android:layout_gravity="center" 
            android:id="@+id/ed_password" 
            android:background="@drawable/background" 
            android:padding="10.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="40.0dip" 
            android:layout_marginLeft="25.0dip"
            android:layout_marginTop="30.0dip" 
            android:layout_marginRight="25.0dip"
            android:hint="Password" 
            android:lines="2" 
            android:inputType="textPassword" />
        <Button android:textSize="13.0sp" 
            android:textColor="#ffffffff" 
            android:gravity="center" 
            android:layout_gravity="center"
            android:id="@+id/btn_login" 
            android:background="@color/colorPrimary"
            android:layout_width="150.0dip"
            android:layout_height="30.0dip"
            android:layout_marginLeft="15.0dip" 
            android:layout_marginTop="65.0dip" 
            android:layout_marginRight="15.0dip"
            android:text="LOGIN" 
            android:lines="2"
            android:layout_marginStart="15.0dip" 
            android:layout_marginEnd="15.0dip" />
        <TextView android:textSize="16.0sp" 
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center" 
            android:clickable="true" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="15.0dip" 
            android:text="Forgot password" />
        <TextView android:textSize="16.0sp" 
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center" 
            android:id="@+id/register" 
            android:clickable="true"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip" 
            android:text="REGISTER" />
        <Button android:textSize="13.0sp" 
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#ff08e8de" 
            android:visibility="gone" 
            android:layout_width="150.0dip"
            android:layout_height="30.0dip" 
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="25.0dip" 
            android:layout_marginRight="15.0dip" 
            android:text="PARTNER'S LOGIN" 
            android:lines="2" 
            android:layout_marginStart="15.0dip" 
            android:layout_marginEnd="15.0dip" />
    </LinearLayout>
</ScrollView>