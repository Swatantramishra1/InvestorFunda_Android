<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#BDBDBD"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:background="@drawable/shape_left"
                    android:id="@+id/childEducation_cal"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/child_education"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Child's Education"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:id="@+id/retirement_cal"
                    android:background="@drawable/shape_left"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/retire_"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Retirement"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:background="@drawable/shape_left"
                    android:id="@+id/marriage_cal"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/c_marriage"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Child's Marriage"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:id="@+id/house_cal"
                    android:background="@drawable/shape_left"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="20dp"
                        android:src="@drawable/home_two"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Buy A House"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:background="@drawable/shape_left"
                    android:id="@+id/car_cal"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="20dp"
                        android:src="@drawable/buy_car"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Buy A Car"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:id="@+id/holiday_cal"
                    android:background="@drawable/shape_left"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/vacation"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:text="Plan A Holiday"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
