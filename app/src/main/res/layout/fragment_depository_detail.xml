<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_gravity="right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:background="#ffffffff"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="25.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Client Type"  />
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/clientType"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Depository Name" />
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:id="@+id/depositoryName"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textNSDLDPID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/nsdldp_ID"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="NSDLDP ID" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textCDSL"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/cdsl_ben"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="CDSL Ben.Ac No" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textNSDL"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/nsdl_ben"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="NSDL Ben.Ac No" />
            </android.support.design.widget.TextInputLayout>
            <Button android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_gravity="end"
                android:id="@+id/bank_save"
                android:background="@color/colorPrimary"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="10.0dip"
                android:text="@string/saveNext" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>