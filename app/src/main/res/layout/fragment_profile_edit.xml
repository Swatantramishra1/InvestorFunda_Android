<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_gravity="right" android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingBottom="60dp">
        <LinearLayout android:orientation="vertical"
            android:background="#ffffffff"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="First Name" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Last Name" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender" />
                <Spinner android:textSize="14.0sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#ff000000"
                    android:id="@+id/gender"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Tax Status"/>
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/taxstatus"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Holding Nature"/>
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/holding_nature"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/holdApplicant"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:text="Second Applicant"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textSecondApplicant"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/secondApplicant"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Second Applicant Name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textSecondApplicantPancard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/secondApplicantPancard"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Second Applicant Pancard" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textSecondApplicantAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/secondApplicantAddress"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Second Applicant Address" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:text="Third Applicant"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textThirdApplicant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/thirdApplicant"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Third Applicant Name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textThirdApplicantPancard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/thirdApplicantPancard"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Third Applicant Pancard" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textThirdApplicantAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/thirdApplicantAddress"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:hint="Third Applicant Address" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:weightSum="2">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1" />
                <TextView android:textSize="14.0sp"
                    android:id="@+id/dob"
                    android:background="@drawable/shape"
                    android:padding="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textPancard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/pancard"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Pan Card No" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="Source Of Wealth" />
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/source_of_wealth"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Divident Pay Mode"/>
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/payMode"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Communication Mode "/>
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/communicationMode"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textMobile"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Email Id" />
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.CardView android:layout_gravity="center"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:layout_marginBottom="10dp">
                <TextView android:textSize="14.0sp" android:textColor="#ffffffff"
                    android:gravity="center" android:background="#9e9e9e"
                    android:padding="5.0dip" android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:text="Contact Details"
                    android:layout_weight="1.2" />
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:layout_marginLeft="10.0dip"
                android:textColor="#454545"
                android:text="PERMANENT ADDRESS"
                android:layout_marginTop="10dp"/>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"
                    android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"  android:text="Country"  />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000" android:id="@+id/country"
                    android:background="@drawable/shape_dropdown" android:layout_width="fill_parent"
                    android:layout_marginTop="4dp" android:layout_height="wrap_content"  />
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="wrap_content"   android:layout_marginTop="10.0dip">
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"
                    android:background="#ffffffff" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="State" />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000"
                    android:id="@+id/state" android:background="@drawable/shape_dropdown" android:layout_marginTop="4dp" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"  android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="City"  />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000" android:layout_marginTop="4dp" android:id="@+id/city" android:background="@drawable/shape_dropdown" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textPincode"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Pincode" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Address" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:layout_marginLeft="10.0dip"
                android:textColor="#454545"
                android:text="RESIDENCE ADDRESS"
                android:layout_marginTop="15dp"/>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"
                    android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"  android:text="Country"  />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000" android:id="@+id/country_one"
                    android:background="@drawable/shape_dropdown" android:layout_width="fill_parent"
                    android:layout_marginTop="4dp" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="wrap_content"   android:layout_marginTop="10.0dip">
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"
                    android:background="#ffffffff" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="State" />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000"
                    android:id="@+id/state_one" android:background="@drawable/shape_dropdown" android:layout_marginTop="4dp" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" >
                <TextView android:textSize="14.0sp" android:textColor="#ff808080"  android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:text="City"  />
                <Spinner android:textSize="14.0sp" android:textColor="#ff000000" android:layout_marginTop="4dp" android:id="@+id/city_one" android:background="@drawable/shape_dropdown" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textPincode_one"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/pincode_one"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Pincode" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textAddress_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/address_one"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Address" />
            </android.support.design.widget.TextInputLayout>
            <Button android:textColor="#ffffffff"  android:id="@+id/profile_save" android:background="#ff660033" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="10.0dip" android:layout_marginTop="20dp" android:text="@string/saveNext" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>