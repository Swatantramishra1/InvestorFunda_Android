<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="10dp" android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/relatePort"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentScheme"
            android:textSize="15dp"
            android:textColor="#424242"
            android:text="Do you really want to proceed for scheme ?"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/submit_port"
        android:background="@drawable/border"
        android:text="Ok"
        android:textColor="#fff"
        android:layout_below="@+id/relatePort"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border"
        android:text="Cancel"
        android:id="@+id/cancel_port"
        android:textColor="#fff"
        android:layout_below="@+id/relatePort"/>
</RelativeLayout>
