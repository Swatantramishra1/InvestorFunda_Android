<FrameLayout android:background="#BDBDBD" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_gravity="right" android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingBottom="60dp">
        <LinearLayout android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.CardView android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="150dp"
                    android:src="@drawable/i_know"
                    android:id="@+id/know"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="150dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="#fff"
                    android:layout_below="@+id/know"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color"
                    android:id="@+id/invest_tax"
                    android:text="Invest"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/invest_tax"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/invest_data"
                    android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip">
                        <TextView android:textSize="14.0sp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Assessment Year" />
                        <Spinner android:textSize="14.0sp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/assesmentYear"
                            android:background="@drawable/bottom"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInvest"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="8.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                    <EditText
                        android:id="@+id/investAmount"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:hint="Investment Amount" />
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip">
                        <TextView android:textSize="14.0sp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Mode Of Investment" />
                        <Spinner android:textSize="14.0sp"
                            android:layout_marginTop="4dp"
                            android:id="@+id/modeOfInvestment"
                            android:background="@drawable/bottom"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="#fff"
                        android:padding="5dp"
                        android:layout_below="@+id/know"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimary"
                        android:id="@+id/invest_now"
                        android:text="invest now"/>
            </LinearLayout>
        </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="150dp"
                        android:src="@drawable/i_dont_know"
                        android:id="@+id/notknow"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="150dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textColor="#fff"
                        android:layout_below="@+id/know"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/text_color"
                        android:id="@+id/calculate"
                        android:text="calculate"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/calculate"
                        android:id="@+id/calculate_data"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">
                                <EditText
                                    android:id="@+id/YourAge"
                                    android:layout_width="match_parent"
                                    android:maxLines="1"
                                    android:maxLength="2"
                                    android:textSize="15dp"
                                    android:inputType="number"
                                    android:layout_height="wrap_content"
                                    android:hint="Your Age" />
                            </android.support.design.widget.TextInputLayout>
                            <LinearLayout android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5.0dip">
                                <TextView android:textSize="14.0sp"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_height="wrap_content"
                                    android:text="Assessment Year" />
                                <Spinner android:textSize="14.0sp"
                                    android:id="@+id/assessment_Year"
                                    android:background="@drawable/bottom"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textAssessment"
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">
                                <EditText
                                    android:id="@+id/assessment_Year_"
                                    android:layout_width="match_parent"
                                    android:maxLines="1"
                                    android:maxLength="4"
                                    android:textSize="15dp"
                                    android:inputType="number"
                                    android:layout_height="wrap_content"
                                    android:hint="Assessment Year" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textGross"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/gross"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="10"
                                android:textSize="15dp"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Gross Annual Income/Salary (with all allowances)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textepf"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/epf"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Employee Provident Fund (EPF)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textPpf"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/ppf"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Public Provident Fund (PPF)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textLife"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/life"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Premium for Life Insurance" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textDeposit"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/deposit"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="5 Year Bank Fixed Deposit" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textPrincipal"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/principal"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Repayment for House Loan (Principal portion)" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textnsc"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/nsc"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="NSC" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textDeduction"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/taxDeduction"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Any Other Tax Deduction Under 80c" />
                        </android.support.design.widget.TextInputLayout>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:layout_below="@+id/know"
                            android:padding="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:background="@color/text_color"
                            android:id="@+id/invest_now_one"
                            android:text="Calculate"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/invest_tax"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/invest_data_tax_find"
                        android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip">
                            <TextView android:textSize="14.0sp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Assessment Year" />
                            <Spinner android:textSize="14.0sp"
                                android:layout_marginTop="4dp"
                                android:id="@+id/assesmentYear_tax_find"
                                android:background="@drawable/bottom"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/textInvest_tax_find"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="8.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <EditText
                                android:id="@+id/investAmount_tax_find"
                                android:layout_width="match_parent"
                                android:maxLines="1"
                                android:maxLength="20"
                                android:drawablePadding="5dp"
                                android:drawableLeft="@drawable/rupee_icon"
                                android:textSize="15dp"
                                android:inputType="number"
                                android:layout_height="wrap_content"
                                android:hint="Investment Amount" />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip">
                            <TextView android:textSize="14.0sp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Mode Of Investment" />
                            <Spinner android:textSize="14.0sp"
                                android:layout_marginTop="4dp"
                                android:id="@+id/modeOfInvestment_tax_find"
                                android:background="@drawable/bottom"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:padding="5dp"
                            android:layout_below="@+id/know"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorPrimary"
                            android:id="@+id/invest_now_tax_find"
                            android:text="invest now"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</FrameLayout>
