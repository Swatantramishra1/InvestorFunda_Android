<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:orientation="vertical" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/ll_c"
        android:padding="7dp"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_gravity="center_horizontal" android:layout_height="120.0dip" android:src="@drawable/vacation_" />
            <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" >
                <TextView android:textSize="18.0sp" android:textColor="@color/common_plus_signin_btn_text_light_default"  android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:text="Plan A Vacation" />
                <TextView android:textSize="12.0sp" android:textColor="@color/common_plus_signin_btn_text_light_default"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"  android:text="Make assure your goal is at right direction which help us to provide best way to invest." />
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textName"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/goalName"
                android:layout_width="match_parent"
                android:maxLength="4"
                android:maxLines="1"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:hint="Give Your Goal A Name" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textgoalBudget"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/goalBudget"
                android:layout_width="match_parent"
                android:maxLength="4"
                android:textSize="15dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/rupee_icon"
                android:layout_height="wrap_content"
                android:hint="Your Budget for the Holiday? (Lakhs)?" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/tourYear"
                android:layout_width="match_parent"
                android:maxLength="4"
                android:textSize="15dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:hint="Which year do you plan to travel (Ex - 2020) ?" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/ageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/current_age"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="3"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="What is your age? " />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/investText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/invest_amt"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="7"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="Amount you wish to invest right now? " />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inflateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/estimatedInflationTour"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="3"
                android:textSize="15dp"
                android:inputType="number"
                android:text="6"
                android:layout_height="wrap_content"
                android:hint="Estimated annual inflation rate from now (%)" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/proceedTour"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@color/text_color"
            android:text="Calculate" />
    </LinearLayout>
</ScrollView>