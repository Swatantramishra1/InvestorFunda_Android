<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:orientation="vertical" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/ll_c"
        android:padding="7dp"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="120.0dip" android:src="@drawable/child_marriage" />
            <TextView android:textSize="15.0sp" android:visibility="gone" android:layout_marginTop="5dp" android:textColor="@color/common_plus_signin_btn_text_light_default"  android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:text="Plan the big day before celebrate it" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_currentAge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/childAge"
                    android:layout_width="match_parent"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Your child's current age?" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_yourAge"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/yourAge"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="What is your age?" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textPlaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/planing"
                android:layout_width="match_parent"
                android:maxLength="3"
                android:maxLines="1"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:hint="At what age are you planning to get her married?" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/budget"
                android:layout_width="match_parent"
                android:maxLength="6"
                android:textSize="15dp"
                android:inputType="number"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/rupee_icon"
                android:layout_height="wrap_content"
                android:hint="What is your budget for the wedding (Lakhs)?" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textLump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/investRight"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="20"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/rupee_icon"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="Amount you wish to invest right now? (Lumpsum)" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inflateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/estimatedInflation"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="3"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:text="6"
                android:hint="Estimated annual inflation rate from now (%)" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/proceedMrg"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@color/text_color"
            android:text="Calculate" />
    </LinearLayout>
</ScrollView>