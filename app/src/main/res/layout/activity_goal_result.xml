<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent">
    <ScrollView android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/titleText"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text=" Gift yourself the best retirement"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#424242"
                android:layout_below="@+id/titleText"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="Estimated Cost Of Your Goal After 33 Years"
                android:id="@+id/differenceText"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/differenceText"
                android:id="@+id/circle"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:id="@+id/circleAmount"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/rupee_icon"/>
            </RelativeLayout>
          <!--  retirement-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/educationLayout"
                android:layout_marginTop="15dp"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/retirementLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/currentAgeLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Current Age"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/cAge"
                        android:text="27"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/currentAgeLayout"
                    android:orientation="horizontal"
                    android:id="@+id/retirementAgeLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Retirement Age"/>
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/rAge"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="27"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/retirementAgeLayout"
                    android:orientation="horizontal"
                    android:id="@+id/estimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/eRate"
                        android:text="6"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/estimatedLayout"
                    android:orientation="horizontal"
                    android:id="@+id/expanseLayout"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Currently Expenditure Amount "/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/expanses"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="25000"/>
                </LinearLayout>
            </RelativeLayout>
            <!--  education-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/circle"
                android:layout_marginTop="15dp"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/educationLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/feeLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Course Fee"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:id="@+id/courseFee"
                        android:text="200000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/feeLayout"
                    android:orientation="horizontal"
                    android:background="@drawable/bottom"
                    android:id="@+id/lumpsum"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Lump Sum Amount "/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/e_lumpSum"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/lumpsum"
                    android:orientation="horizontal"
                    android:id="@+id/lumpEstimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/ed_Rate"
                        android:text="6"/>
                </LinearLayout>

            </RelativeLayout>
            <!--  house-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/retirementLayout"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:id="@+id/houseLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/currentCostLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Current Cost Of Home"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/c_cost"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="250000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/currentCostLayout"
                    android:orientation="horizontal"
                    android:id="@+id/loanLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Your Loan Amount"/>
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/loan"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="278000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/loanLayout"
                    android:orientation="horizontal"
                    android:id="@+id/emiLayout"
                    android:background="@drawable/bottom"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Your Monthly EMI"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/emi"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="5000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/emiLayout"
                    android:orientation="horizontal"
                    android:id="@+id/houseEstimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/hRate"
                        android:text="6"/>
                </LinearLayout>

            </RelativeLayout>
            <!--  car-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/houseLayout"
                android:layout_marginTop="15dp"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/carLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/yearAchieveLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Year To Achieve Goal"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/c_year"
                        android:text="4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/yearAchieveLayout"
                    android:orientation="horizontal"
                    android:id="@+id/monthLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Month To Achieve Goal "/>
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/month"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/monthLayout"
                    android:orientation="horizontal"
                    android:id="@+id/goalLayout"
                    android:background="@drawable/bottom"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Goal Amount"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/gAmount"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="5000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/goalLayout"
                    android:orientation="horizontal"
                    android:id="@+id/carEstimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/carRate"
                        android:text="6"/>
                </LinearLayout>

            </RelativeLayout>
            <!--  marriage-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/carLayout"
                android:layout_marginTop="15dp"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/marriageLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/budgetLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Budget For Wedding"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/mBudget"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="2500000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/budgetLayout"
                    android:orientation="horizontal"
                    android:id="@+id/yearLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Year For Wedding "/>
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/yearWed"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="27"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/yearLayout"
                    android:orientation="horizontal"
                    android:id="@+id/goalYearLayout"
                    android:background="@drawable/bottom"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Goal Year"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/gYear"
                        android:text="2034"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/goalYearLayout"
                    android:orientation="horizontal"
                    android:id="@+id/mEstimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/marriageRate"
                        android:text="6"/>
                </LinearLayout>
            </RelativeLayout>
            <!--  tour-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/marriageLayout"
                android:layout_marginTop="15dp"
                android:background="@drawable/row_border"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/tourLayout"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:id="@+id/budgetTourLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Budget For World Tour"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/tBudget"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="2500000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/budgetTourLayout"
                    android:orientation="horizontal"
                    android:id="@+id/yearTourLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Year For Tour "/>
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/yearTour"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="27"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/yearTourLayout"
                    android:orientation="horizontal"
                    android:id="@+id/amountLayout"
                    android:background="@drawable/bottom"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Monthly Amount"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/monthlyAmount"
                        android:drawableLeft="@drawable/rupee_icon"
                        android:text="4000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@+id/amountLayout"
                    android:orientation="horizontal"
                    android:id="@+id/tEstimatedLayout"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bottom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="Estimated annual inflation rate from now(%)"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:id="@+id/tourRate"
                        android:text="6"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/help"
        android:background="@color/accent_material_light"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:text="Help me achieve this"/>
</RelativeLayout>
