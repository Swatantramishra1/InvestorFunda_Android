<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_gravity="right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:background="#ffffffff"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:textSize="14.0sp"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:background="#ff660033"
                android:padding="5.0dip"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="BANK DETAILS"
                android:layout_weight="1.2" />
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="25.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Bank"  />
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:layout_marginTop="4dp"
                    android:id="@+id/spnSelectBank"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textIFSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/etIFSC"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="IFSC Code" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip">
                <TextView android:textSize="14.0sp"
                    android:textColor="#ff808080"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Account Type" />
                <Spinner android:textSize="14.0sp"
                    android:textColor="#ff000000"
                    android:id="@+id/spnSelectAccountType"
                    android:background="@drawable/shape_dropdown"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textAccountNo"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/accountNo"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Account No" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textNameRecord"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/nameRecord"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:hint="Name as per Bank Record" />
            </android.support.design.widget.TextInputLayout>
            <Button android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_gravity="end"
                android:id="@+id/bank_save"
                android:background="@color/colorPrimary"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="10.0dip"
                android:text="@string/saveNext" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>