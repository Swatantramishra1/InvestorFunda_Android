<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" 
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="15.0dip"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo" />
        <TextView android:textSize="16.0sp"
            android:textColor="#424242"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:id="@+id/logo_text"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Investorfunda" />
            <EditText android:textSize="15.0sp"
                android:textColor="#212121"
                android:layout_below="@+id/logo_text"
                android:textColorHint="#BDBDBD"
                android:id="@+id/ed_email"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email" android:lines="1" />
            <EditText android:textSize="15.0sp"
                android:textColor="#212121"
                android:layout_below="@+id/ed_email"
                android:textColorHint="#BDBDBD"
                android:id="@+id/ed_password"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:lines="1"
                android:inputType="textPassword" />
        <Button android:textSize="14.0sp"
            android:textColor="#fff"
            android:layout_below="@+id/ed_password"
            android:id="@+id/btn_login"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="30dp"
            android:text="LOGIN" android:lines="2" />
        <ProgressBar android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ed_password"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/btn_login"
            android:id="@+id/forgetLayout"
            android:layout_marginTop="10.0dip"
            android:layout_height="wrap_content">
            <TextView android:textSize="15.0sp"
                android:textColor="#454545"
                android:clickable="true"
                android:id="@+id/forget"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?" />
            <TextView android:textSize="15.0sp"
                android:textColor="#212121"
                android:layout_alignParentRight="true"
                android:id="@+id/register"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:text="Register" />
        </RelativeLayout>
    </RelativeLayout>
    <Button android:textSize="11.0sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/partner_login"
        android:background="#ff660033"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PARTNER'S LOGIN" />
    </RelativeLayout>
