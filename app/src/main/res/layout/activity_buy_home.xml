<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:orientation="vertical" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical"
        android:id="@+id/ll_c"
        android:padding="7dp"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"  android:weightSum="2.0">
            <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" >
            <ImageView android:layout_width="match_parent" android:id="@+id/img" android:layout_height="120dp" android:layout_marginRight="10dp" android:src="@drawable/buy_a_house" android:layout_centerHorizontal="true" />
            <TextView android:textSize="15.0sp" android:visibility="gone" android:layout_marginTop="5dp" android:layout_below="@+id/img" android:textStyle="bold" android:textColor="@color/common_plus_signin_btn_text_light_default" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:text="Gift yourself the best retirement" />
        </RelativeLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/plan"
                android:layout_width="match_parent"
                android:maxLength="4"
                android:maxLines="1"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:hint="Year in which you wish to buy a house?(For Eg. 2022) " />
        </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textCurrentCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/currentCost"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/rupee_icon"
                    android:layout_height="wrap_content"
                    android:hint="Current cost of the house (In Fig.)?" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textdownPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/downPayment"
                    android:layout_width="match_parent"
                    android:maxLength="2"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:text="20"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:hint="Down payment you want to plan for (%) ?" />
            </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:weightSum="100">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textRepaymentPeriod"
                android:layout_width="0dp"
                android:layout_weight="65"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/repaymentPeriod"
                    android:layout_width="match_parent"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/rupee_icon"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Loan Repayment Period(years)?" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textCurrentAge"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/CurrentAge"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="What is your age?" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinvest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/invest"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="10"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/rupee_icon"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="Amount you wish to invest right now? (Lumpsum)" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inflateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
            <EditText
                android:id="@+id/estimatedInflationHome"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:maxLength="3"
                android:textSize="15dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:text="6"
                android:hint="Estimated annual inflation rate from now (%)" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:id="@+id/proceedHome"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:background="@color/text_color"
            android:text="Calculate" />
    </LinearLayout>
</ScrollView>